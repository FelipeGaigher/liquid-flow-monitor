# ============================================================
# LIQUID FLOW MONITOR - VARIAVEIS DE AMBIENTE
# Copie este arquivo para .env e ajuste os valores
# ============================================================

# ==========================================================
# AMBIENTE
# ==========================================================
NODE_ENV=development

# ==========================================================
# BACKEND API
# ==========================================================
API_PORT=3000

# ==========================================================
# DATABASE - PostgreSQL
# ==========================================================
DB_HOST=localhost
DB_PORT=5432
DB_USER=lfm_user
DB_PASSWORD=lfm_password_dev
DB_NAME=liquid_flow_monitor

# ==========================================================
# AUTENTICACAO JWT
# ==========================================================
# IMPORTANTE: Em producao, use uma chave forte e unica!
JWT_SECRET=dev_jwt_secret_change_in_production_12345
JWT_EXPIRES_IN=24h
JWT_REFRESH_EXPIRES_IN=7d

# ==========================================================
# CORS
# ==========================================================
CORS_ORIGIN=http://localhost:5173

# ==========================================================
# FRONTEND (VITE)
# ==========================================================
VITE_API_URL=http://localhost:3000/api
VITE_APP_NAME=TankControl

# ==========================================================
# PGADMIN (Opcional - para desenvolvimento)
# ==========================================================
PGADMIN_EMAIL=admin@lfm.local
PGADMIN_PASSWORD=admin
PGADMIN_PORT=5050

# ==========================================================
# LOGS
# ==========================================================
LOG_LEVEL=debug
LOG_FORMAT=dev

# ==========================================================
# EMAIL
# ==========================================================
# EMAIL_PROVIDER=console
# SENDGRID_API_KEY=your_sendgrid_api_key
# EMAIL_FROM=noreply@tankcontrol.com
# EMAIL_FROM_NAME=TankControl
# EMAIL_ALERT_RECIPIENTS=admin@empresa.com,operacoes@empresa.com
# APP_BASE_URL=http://localhost:5173

# ==========================================================
# RATE LIMITING
# ==========================================================
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# ==========================================================
# PRODUCAO (Descomente e ajuste em producao)
